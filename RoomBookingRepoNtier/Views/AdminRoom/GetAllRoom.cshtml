@model IEnumerable<RoomBookingRepoNtier.Domain.Entities.RoomEntity>

<h2>Room List</h2>

<p>
	<a asp-action="CreateRoom" class="btn btn-primary">Create New Room</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Capacity</th>
			<th>Status</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var room in Model)
		{
			<tr>
				<td>@room.Id</td>
				<td>@room.RoomName</td>
				<td>@room.Capacity</td>
				<td>@room.Status</td>
				<td>
					<a asp-action="GetRoomDetails" asp-controller="AdminRoom" asp-route-id="@room.Id">Get Room Details</a> |
					<a asp-action="EditRoom" asp-controller="AdminRoom" asp-route-id="@room.Id">Edit Room</a> |
					<a asp-action="DeleteRoom" asp-controller="AdminRoom" asp-route-id="@room.Id">Delete Room</a> |
					<a asp-action="BookRoom" asp-controller="AdminBooking" asp-route-id="@room.Id">Book Room</a> |
					<a asp-action="GetBookingDetails" asp-controller="AdminBooking" asp-route-id="@room.Id">Booking Details of Room</a> |

				</td>
			</tr>
		}
	</tbody>
</table>
<p>
	<a class="btn btn-primary" href="@Url.Action("GetAllBooking", "AdminBooking")">Get All Bookings</a>
</p>
