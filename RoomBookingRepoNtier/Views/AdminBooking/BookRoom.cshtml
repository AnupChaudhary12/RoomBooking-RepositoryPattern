@model RoomBookingRepoNtier.Domain.Entities.BookingEntity

<h2>Book Room</h2>

<form asp-action="BookRoom" method="post">
    <div class="form-group">
        <label asp-for="RoomEntityId">Select a Room:</label>
        <select asp-for="RoomEntityId" class="form-control">
            <option value="">-- Select a Room --</option>
            @foreach (var room in ViewBag.Rooms)
            {
                <option value="@room.Id">@room.RoomName</option>
            }
        </select>
        <span asp-validation-for="RoomEntityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime">Start Time:</label>
        <input asp-for="StartTime" class="form-control" type="datetime-local">
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime">End Time:</label>
        <input asp-for="EndTime" class="form-control" type="datetime-local">
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Book Room</button>
</form>

<a asp-action="GetAllRoom" asp-controller="AdminRoom" class="btn btn-secondary mt-3">Back to Room List</a>
