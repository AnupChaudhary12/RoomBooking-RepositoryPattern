@model RoomBookingRepoNtier.Domain.ViewModels.BookingListViewModel

<h2>Bookings for Room @Model.RoomEntityId</h2>

@if (Model.Bookings.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>User ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@booking.Id</td>
                    <td>@booking.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.UserId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings found for this room.</p>
}

<a asp-action="GetAllRoom" asp-controller="AdminRoom" class="btn btn-secondary">Back to Room List</a>
